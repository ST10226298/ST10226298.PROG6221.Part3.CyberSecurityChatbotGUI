<UserControl x:Class="CyberSecurityChatbotGUI.Views.TaskAssistantScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <Grid Margin="10">
        <StackPanel>
            <!-- Title input with placeholder -->
            <TextBox x:Name="TitleTextBox" Width="300" Margin="0,5"
                     Text="Task Title" Foreground="Gray"
                     GotFocus="RemoveText" LostFocus="AddText"/>

            <!-- Description input with placeholder -->
            <TextBox x:Name="DescriptionTextBox" Width="300" Height="100" Margin="0,5"
                     Text="Task Description" Foreground="Gray"
                     GotFocus="RemoveText" LostFocus="AddText"
                     TextWrapping="Wrap" AcceptsReturn="True"/>

            <!-- Reminder date picker -->
            <DatePicker x:Name="ReminderDatePicker" Width="300" Margin="0,5"/>

            <!-- Add Task button -->
            <Button Content="Add Task" Width="100" Margin="0,10" Click="AddTask_Click"/>

            <!-- Task list display -->
            <ListBox x:Name="TasksListBox" Width="500" Height="250" Margin="0,10"
                     ItemsSource="{Binding Tasks}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <CheckBox IsChecked="{Binding IsCompleted}" Margin="5"
                                      Checked="TaskCompleted_Checked" Unchecked="TaskCompleted_Unchecked"/>
                            <StackPanel Width="350">
                                <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Description}" TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding ReminderDate, StringFormat=Reminder: {0:d}}" Foreground="Gray"/>
                            </StackPanel>
                            <Button Content="Delete" Tag="{Binding}" Click="DeleteTask_Click" Margin="5"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</UserControl>
