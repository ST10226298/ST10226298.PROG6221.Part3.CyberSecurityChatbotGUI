<UserControl x:Class="CyberSecurityChatbotGUI.Views.ChatbotScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CyberSecurityChatbotGUI.Views"
             Height="Auto" Width="Auto" Background="#F2F2F2">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Chat Display -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="ChatStackPanel" Margin="10" />
        </ScrollViewer>

        <!-- User Input Area -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
            <TextBox x:Name="UserInputBox" Width="650" Height="40" FontSize="14"
                     Margin="0,0,10,0" VerticalContentAlignment="Center"
                     KeyDown="UserInputBox_KeyDown"/>
            <Button Content="Send" Width="100" Height="40"
                    Background="#007ACC" Foreground="White" FontWeight="Bold"
                    Click="SendButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
