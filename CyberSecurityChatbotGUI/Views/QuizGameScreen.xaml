<UserControl x:Class="CyberSecurityChatbotGUI.Views.QuizGameScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto" Margin="10">
    <Grid>
        <StackPanel>
            <!-- Question text -->
            <TextBlock x:Name="QuestionTextBlock" FontSize="18" FontWeight="Bold" TextWrapping="Wrap" Margin="0,10"/>

            <!-- Options as buttons -->
            <StackPanel x:Name="OptionsPanel" Margin="0,10"/>

            <!-- Feedback text -->
            <TextBlock x:Name="FeedbackTextBlock" Foreground="Green" FontWeight="SemiBold" Margin="0,10"/>

            <!-- Navigation buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
                <Button x:Name="NextButton" Content="Next" Width="100" Click="NextButton_Click" IsEnabled="False" Margin="5"/>
                <Button x:Name="RestartButton" Content="Restart Quiz" Width="100" Click="RestartButton_Click" Margin="5"/>
            </StackPanel>

            <!-- Score display -->
            <TextBlock x:Name="ScoreTextBlock" FontSize="16" FontWeight="Bold" Margin="0,10" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
