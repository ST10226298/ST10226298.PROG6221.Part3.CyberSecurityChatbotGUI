<Window x:Class="CyberSecurityChatbotGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cybersecurity Awareness Chatbot" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Main Grid -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="47*"/>
            <!-- Main Content -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Background="#2D2D30" Grid.Column="0">
            <TextBlock Text="🛡️ CyberBot" 
                       Foreground="White" FontSize="20" FontWeight="Bold"
                       Margin="10" HorizontalAlignment="Center"/>
            <Button Content="Chatbot" Tag="Chat" Click="Navigate_Click"
                    Margin="10" Padding="10" Background="#3F3F46" Foreground="White"/>
            <Button Content="Task Assistant" Tag="Tasks" Click="Navigate_Click"
                    Margin="10" Padding="10" Background="#3F3F46" Foreground="White"/>
            <Button Content="Quiz Game" Tag="Quiz" Click="Navigate_Click"
                    Margin="10" Padding="10" Background="#3F3F46" Foreground="White"/>
            <Button Content="Activity Log" Tag="Log" Click="Navigate_Click"
                    Margin="10" Padding="10" Background="#3F3F46" Foreground="White"/>
        </StackPanel>

        <!-- Main Content Area -->
        <ContentControl x:Name="MainContentControl" Grid.Column="1" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
